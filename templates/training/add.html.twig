{% extends 'base.html.twig' %}

{% block title %}Ajouter une formation{% endblock %}

{% block body %}


    {% if edit %}
        <h1>Modifier une formation</h1>
    {% else %}
        <h1>Ajouter une formation</h1>
    {% endif %}

    
    


    {# Custom form #}
    {{ form_start(formAddTraining) }}


        <div class="my-custom-class-for-errors">
            {{ form_errors(formAddTraining) }}
        </div>


        <div>
            {{ form_label(formAddTraining.title, 'Titre')}}
            {{ form_widget(formAddTraining.title) }}
        </div>


        {% if edit %}
            {{ form_widget(formAddTraining.submit, { 'label': 'Modifier' }) }} &nbsp;<a href="{{ path('app_training') }}">Annuler</a>
        {% else %}
            {{ form_widget(formAddTraining.submit, { 'label': 'Ajouter' }) }} &nbsp;<a href="{{ path('app_training') }}">Annuler</a>
        {% endif %}


    {{ form_end(formAddTraining) }}



{% endblock %}
